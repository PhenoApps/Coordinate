<?xml version="1.0" encoding="utf-8"?>
<!-- To switch to the old user interface perform the three steps indicated below. -->
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.wheatgenetics.coordinate">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Step 1: Change android:theme from "@style/AppTheme" to "@style/OldAppTheme". -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Step 2: Change android:name from ".MainActivity" to ".OldMainActivity". -->
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|keyboard">

            <intent-filter>
                <action   android:name="android.intent.action.MAIN"       />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Step 3: Change android:name from ".OldMainActivity" to ".MainActivity". -->
        <activity android:name=".OldMainActivity" />

        <activity
            android:name=".templates.TemplatesActivity"
            android:label="@string/TemplatesActivityLabel" />

        <activity
            android:name=".projects.ProjectsActivity"
            android:label="@string/ProjectsActivityLabel" />

        <activity android:name=".tc.ExcludeCellsActivity">
            <intent-filter>
                <action   android:name="org.wheatgenetics.coordinate.tc.ExcludeCellsActivity" />
                <category android:name="android.intent.category.DEFAULT"                      />
            </intent-filter>
        </activity>

        <activity android:name=".nisl.PreferenceActivity">
            <intent-filter>
                <action   android:name="org.wheatgenetics.coordinate.PreferenceActivity" />
                <category android:name="android.intent.category.DEFAULT"                 />
            </intent-filter>
        </activity>
    </application>
</manifest>