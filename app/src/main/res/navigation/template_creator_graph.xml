<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid_creator_graph"
    app:startDestination="@id/template_dimensions">

    <fragment tools:layout="@layout/fragment_template_creator_dimensions"
        android:id="@+id/template_dimensions"
        android:name="org.wheatgenetics.coordinate.fragments.template_creator.TemplateCreatorDimensions"
        android:label="Template name, rows, and columns" >
        <action
            android:id="@+id/action_template_dimensions_to_template_optional_fields"
            app:destination="@id/template_optional_fields" />
    </fragment>

    <fragment tools:layout="@layout/fragment_template_creator_optional_fields"
        android:id="@+id/template_optional_fields"
        android:name="org.wheatgenetics.coordinate.fragments.template_creator.TemplateCreatorOptionalFields"
        android:label="Template Optional Fields" >
        <action
            android:id="@+id/action_template_optional_fields_pop"
            app:popUpTo="@id/template_optional_fields"
            app:popUpToInclusive="true" />
        <argument
            android:name="title"
            app:argType="string" />
        <action
            android:id="@+id/action_template_optional_fields_to_template_exclude"
            app:destination="@id/template_exclude_random" />
    </fragment>

    <fragment tools:layout="@layout/fragment_template_exclude_random"
        android:id="@+id/template_exclude_random"
        android:name="org.wheatgenetics.coordinate.fragments.template_creator.TemplateCreatorExcludeRandom"
        android:label="Template Exclude Random" >
        <action
            android:id="@+id/action_template_exclude_pop"
            app:popUpTo="@id/template_exclude_random"
            app:popUpToInclusive="true" />
        <argument
            android:name="title"
            app:argType="string" />
        <action
            android:id="@+id/action_template_exclude_to_template_exclude_selection"
            app:destination="@id/template_exclude_selection" />
    </fragment>

    <fragment tools:layout="@layout/fragment_template_exclude_selection"
        android:id="@+id/template_exclude_selection"
        android:name="org.wheatgenetics.coordinate.fragments.template_creator.TemplateCreatorExcludeSelection"
        android:label="Template Exclude Selection" >
        <action
            android:id="@+id/action_template_exclude_pop"
            app:popUpTo="@id/template_exclude_selection"
            app:popUpToInclusive="true" />
        <argument
            android:name="title"
            app:argType="string" />
        <action
            android:id="@+id/action_template_exclude_to_template_naming"
            app:destination="@id/template_column_naming" />
    </fragment>

    <fragment tools:layout="@layout/fragment_template_creator_column_naming"
        android:id="@+id/template_column_naming"
        android:name="org.wheatgenetics.coordinate.fragments.template_creator.TemplateCreatorColumnNaming"
        android:label="Template Column Naming" >
        <action
            android:id="@+id/action_template_naming_pop"
            app:popUpTo="@id/template_column_naming"
            app:popUpToInclusive="true" />
        <argument
            android:name="title"
            app:argType="string" />
        <action android:id="@+id/action_template_column_to_row_naming"
            app:destination="@id/template_row_naming"/>
    </fragment>

    <fragment tools:layout="@layout/fragment_template_creator_row_naming"
        android:id="@+id/template_row_naming"
        android:name="org.wheatgenetics.coordinate.fragments.template_creator.TemplateCreatorRowNaming"
        android:label="Template Row Naming" >
        <action
            android:id="@+id/action_template_naming_pop"
            app:popUpTo="@id/template_row_naming"
            app:popUpToInclusive="true" />
        <argument
            android:name="title"
            app:argType="string" />
        <action
            android:id="@+id/action_template_row_naming_to_template_preview"
            app:destination="@id/template_preview" />
    </fragment>

    <fragment tools:layout="@layout/fragment_template_preview"
        android:id="@+id/template_preview"
        android:name="org.wheatgenetics.coordinate.fragments.template_creator.TemplateCreatorPreview"
        android:label="Template Preview" >
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>

</navigation>