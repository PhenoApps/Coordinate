<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="0"
    android:stretchColumns="0"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:context="org.wheatgenetics.coordinate.main.OldMainActivity"
    tools:showIn="@layout/app_bar_main"
    tools:ignore="PrivateResource">

    <TableRow tools:ignore="UselessParent">

        <fragment
            android:id="@+id/gridDisplayFragment"
            android:name="org.wheatgenetics.coordinate.griddisplay.GridDisplayFragment"

            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"

            tools:layout="@layout/fragment_display" />

        <View
            android:layout_width="2dp"
            android:background="@color/colorAccent" />

        <fragment
            android:id="@+id/dataEntryFragment"
            android:name="org.wheatgenetics.coordinate.collector.DataEntryFragment"

            tools:layout="@layout/fragment_data_entry" />

    </TableRow>

</TableLayout>