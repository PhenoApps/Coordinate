<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    tools:context=".OldMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SetNumberingAlertDialogRowSpinnerLabel"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/rowSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/SetNumberingAlertDialogSpinnerEntries" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SetNumberingAlertDialogColSpinnerLabel"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/colSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/SetNumberingAlertDialogSpinnerEntries" />

    </LinearLayout>

</LinearLayout>