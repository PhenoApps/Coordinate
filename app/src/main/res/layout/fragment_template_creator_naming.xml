<?xml version="1.0" encoding="utf-8"?>
<!-- used to ask to add to project or not -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_margin="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/frag_pb"
        android:progress="75"/>

    <TextView style="@style/TextAppearance.MaterialComponents.Headline4"
        android:id="@+id/frag_template_creator_naming_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/frag_template_creator_naming_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frag_pb"/>

    <TextView style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:id="@+id/frag_template_creator_naming_summary_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/frag_template_creator_naming_summary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frag_template_creator_naming_title_tv"/>

    <TextView style="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frag_template_creator_naming_summary_tv"
        android:text="@string/frag_template_creator_naming_rows_label"
        android:id="@+id/frag_template_creator_naming_rows_label_tv"/>

    <Spinner style="@style/Widget.AppCompat.DropDownItem.Spinner"
        android:layout_marginStart="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/frag_template_creator_naming_rows_spn"
        android:entries="@array/template_creator_naming_entries"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frag_template_creator_naming_rows_label_tv"/>

    <TextView style="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frag_template_creator_naming_rows_spn"
        android:text="@string/frag_template_creator_naming_columns_label"
        android:id="@+id/frag_template_creator_naming_columns_label_tv"/>

    <Spinner style="@style/Widget.AppCompat.DropDownItem.Spinner"
        android:layout_marginStart="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/frag_template_creator_naming_columns_spn"
        android:entries="@array/template_creator_naming_entries"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frag_template_creator_naming_columns_label_tv"/>

    <Button style="@style/TextAppearance.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/frag_next_btn"
        android:background="@color/colorPrimary"
        android:text="@string/finish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/frag_back_btn"
        android:layout_margin="16dp"/>

    <Button style="@style/TextAppearance.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/frag_back_btn"
        android:background="@color/colorPrimary"
        android:text="@string/back"
        app:layout_constraintEnd_toStartOf="@id/frag_next_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>