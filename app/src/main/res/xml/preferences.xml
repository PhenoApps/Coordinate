<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        android:icon="@drawable/ic_pref_collection"
        android:key="pref_key_collection"
        android:title="@string/preferences_collection_title"
        app:fragment="org.wheatgenetics.coordinate.preference.CollectionPreferencesFragment" />

    <Preference
        android:icon="@drawable/ic_pref_layout"
        android:key="pref_key_layout"
        android:title="@string/preferences_layout_title"
        app:fragment="org.wheatgenetics.coordinate.preference.LayoutPreferencesFragment" />

    <Preference
        android:icon="@drawable/ic_pref_export"
        android:key="pref_key_export"
        android:title="@string/preferences_export_title"
        app:fragment="org.wheatgenetics.coordinate.preference.ExportPreferencesFragment" />

    <Preference
        android:icon="@drawable/ic_pref_storage"
        android:key="pref_key_storage"
        android:title="@string/preferences_storage_title"
        app:fragment="org.wheatgenetics.coordinate.preference.StoragePreferencesFragment" />

</androidx.preference.PreferenceScreen>