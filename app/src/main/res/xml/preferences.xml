    <Preference
        android:icon="@drawable/ic_pref_storage"
        android:key="pref_key_storage"
        android:title="@string/pref_storage_title"
        app:fragment="org.wheatgenetics.coordinate.preference.StoragePreferencesFragment" />

    <Preference
        android:icon="@drawable/ic_about_info"
        android:key="pref_key_about"
        android:title="@string/preferences_about_title"
