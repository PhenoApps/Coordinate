<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="Advancement"
        android:title="@string/AdvancementPreferenceTitle"
        android:summary="@string/AdvancementPreferenceSummary"
        android:entries="@array/AdvancementPreferenceEntries"
        android:entryValues="@array/AdvancementPreferenceEntryValues"
        android:defaultValue="@string/AdvancementPreferenceDefault" />

    <CheckBoxPreference
        android:key="SoundOn"
        android:title="@string/SoundPreferenceTitle"
        android:summaryOn="@string/SoundPreferenceSummaryOn"
        android:summaryOff="@string/SoundPreferenceSummaryOff"
        android:defaultValue="true" />

    <ListPreference
        android:key="ProjectExport"
        android:title="@string/ProjectExportPreferenceTitle"
        android:summary="@string/ProjectExportPreferenceSummary"
        android:entries="@array/ProjectExportPreferenceEntries"
        android:entryValues="@array/ProjectExportPreferenceEntryValues"
        android:defaultValue="@string/ProjectExportPreferenceDefault" />

    <ListPreference
        android:key="Uniqueness"
        android:title="@string/UniquenessPreferenceTitle"
        android:summary="@string/UniquenessPreferenceSummary"
        android:entries="@array/UniquenessPreferenceEntries"
        android:entryValues="@array/UniquenessPreferenceEntryValues"
        android:defaultValue="@string/UniquenessPreferenceDefault" />

</PreferenceScreen>