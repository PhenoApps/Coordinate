    <Preference
        android:icon="@drawable/ic_pref_collection"
        android:key="pref_key_collection"
        android:title="@string/preferences_collection_title"
        app:fragment="org.wheatgenetics.coordinate.preference.CollectionPreferencesFragment" />

    <Preference
        android:icon="@drawable/ic_pref_export"
        android:key="pref_key_export"
        android:title="@string/preferences_export_title"
