<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/main_primary</item>
        <item name="colorPrimaryDark">@color/main_primaryDark</item>
        <item name="colorAccent">@color/main_colorAccent</item>

        <item name="buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="NavigationDrawerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="AppDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/main_primary</item>
        <item name="colorPrimaryDark">@color/main_primaryDark</item>
        <item name="colorAccent">@color/main_colorAccent</item>

        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="android:actionMenuTextAppearance">@style/AppMenuText</item>
    </style>

    <style name="AppMenuText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ChangelogTitles" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_colorAccent</item>
    </style>

    <style name="ChangelogContent" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AppToolbar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
    </style>

    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#FFFFFF</item>
    </style>


    <style name="bg">
        <item name="android:background">#000000</item>
    </style>

    <style name="layout">
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
    </style>

    <style name="button">
        <item name="android:paddingLeft">30dip</item>
        <item name="android:paddingRight">30dip</item>
    </style>

    <style name="table_cell_info">
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingLeft">50dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="table_cell">
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingLeft">50dip</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="table_cell_col" parent="table_cell">
        <item name="android:background">#777</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_margin">50dip</item>
    </style>

    <style name="table_cell_row" parent="table_cell">
        <item name="android:background">#777</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">50dip</item>
    </style>

    <style name="table_cell_box" parent="table_cell">
        <item name="android:background">@drawable/table_cell</item>
        <item name="android:textColor">#fff</item>
        <item name="android:paddingLeft">30dip</item>
        <item name="android:layout_margin">50dip</item>
    </style>

    <style name="table_cell_num" parent="table_cell">
        <item name="android:background">#000</item>
        <item name="android:textColor">#fff</item>
        <item name="android:paddingLeft">5dip</item>
    </style>

    <style name="row_value">
        <item name="android:paddingLeft">30dip</item>
        <item name="android:paddingRight">30dip</item>
    </style>

    <style name="ltxt">
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="edit">
        <item name="android:minEms">15</item>
        <item name="android:maxEms">20</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
    </style>
</resources>
