<resources xmlns:tools="http://schemas.android.com/tools">
    <string name="app_name" tools:override="true">Coordinate</string>

    <string name="navigation_drawer_open">Open navigation drawer</string>
    <string name="navigation_drawer_close">Close navigation drawer</string>

    <string name="action_settings">Settings</string>


    <!-- Preferences -->
    <string name="SoundPreferenceTitle">Sound</string>
    <string name="SoundPreferenceSummaryOff">Remain silent at end of row or column and grid.</string>
    <string name="SoundPreferenceSummaryOn">Play sound at end of row or column and grid.</string>

    <string name="AdvancementPreferenceTitle">Advancement</string>
    <string name="AdvancementPreferenceSummary">After saving a value in a cell, Coordinate will advance to the next included cell in the grid.  You may advance either down, then across, or across, then down.</string>
    <string-array name="AdvancementPreferenceEntries">
        <item>Down, then across</item>
        <item>Across, then down</item>
    </string-array>
    <string name="AdvancementPreferenceDownThenAcrossEntryValue">DownThenAcross</string>
    <string name="AdvancementPreferenceAcrossThenDownEntryValue">AcrossThenDown</string>
    <string-array name="AdvancementPreferenceEntryValues">
        <item>@string/AdvancementPreferenceDownThenAcrossEntryValue</item>
        <item>@string/AdvancementPreferenceAcrossThenDownEntryValue</item>
    </string-array>
    <string name="AdvancementPreferenceDefault">@string/AdvancementPreferenceDownThenAcrossEntryValue</string>

    <string name="ProjectExportPreferenceTitle">Project Export</string>
    <string name="ProjectExportPreferenceSummary">When exporting the grids in a project, you may create one file per grid or one file for the entire project.</string>
    <string-array name="ProjectExportPreferenceEntries">
        <item>One file per grid</item>
        <item>One file for the entire project</item>
    </string-array>
    <string name="ProjectExportPreferenceOneFilePerGrid">OneFilePerGrid</string>
    <string name="ProjectExportPreferenceOneFileEntireProject">OneFileEntireProject</string>
    <string-array name="ProjectExportPreferenceEntryValues">
        <item>@string/ProjectExportPreferenceOneFilePerGrid</item>
        <item>@string/ProjectExportPreferenceOneFileEntireProject</item>
    </string-array>
